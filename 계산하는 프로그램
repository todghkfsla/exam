//일단 임시본 나중에 편집할거

package 스윙;

import javax.swing.*;

import java.awt.event.*;

import java.awt.*;

public class CheckBoxItemEventEx extends JFrame {

private JCheckBox [] food=new JCheckBox[3]; private String []names= {"라면","햄버거","콜라"};

private JLabel sumLabel;

public CheckBoxItemEventEx() { setTitle("현재금액이랑 총 합계 알려주는 프로그램");

setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);

Container c=getContentPane();
c.setLayout(new FlowLayout());
c.add(new JLabel("라면:3000원,햄버거 3500원, 콜라 2000원"));
MyItemListener listener=new MyItemListener();
for(int i=0; i<food.length;i++) {
 food[i]=new JCheckBox(names[i]);
  food[i].setBorderPainted(true);
  c.add(food[i]);
food[i].addItemListener(listener);
}

sumLabel=new JLabel("현재 금액은 0원입니다");
c.add(sumLabel);
setSize(250,200);
setVisible(true);
} class MyItemListener implements ItemListener{

private int sum=0;

public void itemStateChanged(ItemEvent e) {
	if(e.getStateChange()==ItemEvent.SELECTED) {
		if(e.getItem()==food[0])
			sum+=3000;
		else if(e.getItem()==food[1])
			sum+=3500;
		else
			sum+=2000;
			
	}
	else {
		if(e.getItem()==food[0])
			sum-=3000;
		else if(e.getItem()==food[1])
			sum-=3500;
		else
			sum-=2000;
	}
	sumLabel.setText("현재"+sum+"원입니다");
}
} public static void main(String []args) {

new CheckBoxItemEventEx();
}

}
